@model Laab10.Person
@{
    ViewBag.Title = "PersonDetails";
}

<h2>PersonDetails</h2>
<hr />
<div class="row">
    <div class="col-md-1">@Html.LabelFor(m => m.LastName)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.LastName)</div>
    <div class="col-md-1">@Html.LabelFor(m => m.FirstName)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.FirstName)</div>
    <div class="col-md-1">@Html.LabelFor(m => m.Patronymic)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.Patronymic)</div>
</div>
<div class="row">
    <div class="col-md-1">@Html.LabelFor(m => m.Age)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.Age)</div>
    <div class="col-md-1">@Html.LabelFor(m => m.Gender)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.Gender)</div>
    <div class="col-md-1">@Html.LabelFor(m => m.HasJob)</div>
    <div class="col-md-3">@Html.DisplayFor(m => m.HasJob)</div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "ListOfPeople")
</p>

<div class="row" style="border: 5px solid red">
    <div class="col-md-9" style="border: 4px solid blue">
        Level 1: .col-md-9
        <div class="row" style="border: 5px solid green">
            <div class="col-md-5" style="border: 3px solid #ff560d">
                Level 2: .col-md-5
            </div>
            <div class="col-md-5" style="border: 3px solid #ff560d">
                Level 2: .col-md-5
            </div>
        </div>
        <div class="row" style="border: 5px solid green">
            <div class="col-md-5" style="border: 3px solid #ff560d">
                Level 2: .col-md-5
            </div>
            <div class="col-md-offset-2 col-md-5" style="border: 3px solid #ff560d">
                Level 2: .col-md-offset-2 .col-md-5
            </div>
        </div>
    </div>
</div>
